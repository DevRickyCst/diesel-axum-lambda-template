# Application Configuration
APP_ENV=development
SERVER_HOST=0.0.0.0
SERVER_PORT=3000
RUST_LOG=debug,{{project_name}}=debug

# Database Configuration
DATABASE_URL=postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}
DB_POOL_MAX_SIZE=15

# PostgreSQL Configuration (for Docker)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB={{database_name}}
POSTGRES_PORT=5432

# Database Host/Port (for Docker networking)
DB_HOST=db
DB_PORT=5432

# Test Database Configuration
TEST_POSTGRES_USER=postgres
TEST_POSTGRES_PASSWORD=postgres
TEST_POSTGRES_DB={{database_name}}_test
TEST_DATABASE_URL=postgres://${TEST_POSTGRES_USER}:${TEST_POSTGRES_PASSWORD}@test_db:5432/${TEST_POSTGRES_DB}

# Docker Resource Limits (Development)
DB_MEMORY_LIMIT=512M
DB_MEMORY_RESERVATION=256M
APP_MEMORY_LIMIT=1G
APP_MEMORY_RESERVATION=512M

# Docker Resource Limits (Testing)
TEST_DB_MEMORY_LIMIT=256M
TEST_DB_MEMORY_RESERVATION=128M
TEST_APP_MEMORY_LIMIT=512M
TEST_APP_MEMORY_RESERVATION=256M

# AWS Lambda (only if deploying to Lambda)
# AWS_LAMBDA_FUNCTION_NAME will be set automatically by Lambda runtime
